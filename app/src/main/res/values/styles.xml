<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/app_theme</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="anti_theft_t9_key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/anti_theft_t9_key_paddingTop</item>
        <item name="android:paddingBottom">@dimen/anti_theft_t9_key_paddingBottom</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/btn_keyboard_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="KeypadButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">32.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/calculator_keypad_button</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="KeypadClearButton" parent="@style/KeypadButton">
        <item name="android:textSize">14.0dip</item>
    </style>
    <style name="KeypadEnterButton" parent="@style/KeypadButton">
        <item name="android:textSize">14.0dip</item>
    </style>
    <style name="CalculatorDisplay">
        <item name="android:textSize">42.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">right|center</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60.0dip</item>
        <item name="android:layout_margin">0.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="CourseValueStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
